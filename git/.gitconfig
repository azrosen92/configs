# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = Aaron Rosen
	email = aaron.rosen@gusto.com
	username = azrosen92
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	stat = status
	unstage = reset HEAD --
	last = log -l HEAD
	wip = !"git add -A; git ls-files --deleted -z | xargs -0 git rm; git commit -n -m \"wip\""
	unwip = !"git log -n 1 | grep -q -c wip && git reset HEAD~1"
	fix = commit --amend -C HEAD
	amend = commit --amend
	rb = rebase
	rbc = rebase --continue
	rbs = rebase --skip
	lg = log --name-status --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	update = !"git co $GIT_MAIN && git pull && git co - && git rebase $GIT_MAIN"
  com = !"git co $GIT_MAIN"
  db =!"git checkout -q main && git for-each-ref refs/heads/ \"--format=%(refname:short)\" | while read branch; do mergeBase=$(git merge-base main $branch) && [[ $(git cherry main $(git commit-tree $(git rev-parse \"$branch^{tree}\") -p $mergeBase -m _)) == \"-\"* ]] && git branch -D $branch; done"
  rball = machete traverse --fetch --start-from=first-root
[push]
	default = simple
[core]
	editor = nvim
	excludesfile = /Users/aaron.rosen/.gitignore_global
	hooksPath = /Users/aaron.rosen/.gusto/githooks
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = true
[credential]
	helper = osxkeychain
