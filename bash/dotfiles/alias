# Python
alias sa="source activate"
alias sd="source deactivate"

# Swift
alias pod="bundle exec pod"

# Node
alias clear-node-modules="find . -name "node_modules" -exec rm -rf '{}' +"

# Extras
alias cask='brew cask'
alias chrome='open -a Google\ Chrome'
alias ls='ls -l'
alias torrent='transmission-remote --download-dir /Users/aaronrosen/Downloads/ --add'
alias torrent-stop='transmission-remote --stop -tall'
alias torrent-start='transmission-remote --start --tall'

alias dc='docker-compose up --build'

# Git
alias gbb="git for-each-ref --sort='-authordate:iso8601' --format=' %(authordate:relative)%09%(refname:short)' refs/heads"
